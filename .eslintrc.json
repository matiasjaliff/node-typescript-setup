{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:@typescript-eslint/recommended-requiring-type-checking"
  ],
  "ignorePatterns": ["dist/**/*"],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": true,
    "tsconfigRootDir": "__dirname"
  },
  "plugins": ["@typescript-eslint"],
  "root": true,
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  }
}
